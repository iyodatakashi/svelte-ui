{
	"name": "@14ch/svelte-ui",
	"description": "Modern Svelte UI components library with TypeScript support",
	"private": false,
	"version": "0.0.15",
	"type": "module",
	"keywords": [
		"svelte",
		"ui",
		"components",
		"typescript",
		"sveltekit",
		"library"
	],
	"author": "14ch",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/iyodatakashi/svelte-ui.git"
	},
	"homepage": "https://github.com/iyodatakashi/svelte-ui#readme",
	"bugs": {
		"url": "https://github.com/iyodatakashi/svelte-ui/issues"
	},
	"main": "dist/index.js",
	"module": "dist/index.js",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"import": "./dist/index.js",
			"require": "./dist/index.js"
		},
		"./styles": "./dist/assets/styles/import.scss",
		"./styles/*": "./dist/assets/styles/*"
	},
	"files": [
		"dist/components/",
		"dist/types/",
		"dist/utils/",
		"dist/constants/",
		"dist/assets/",
		"dist/i18n/",
		"dist/index.js",
		"dist/index.d.ts"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"package": "svelte-package",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"test:browser": "vitest --config vitest.config.ts --run",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build",
		"prepublishOnly": "npm run package",
		"publish": "npm publish"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^4.1.1",
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@storybook/addon-a11y": "^9.1.5",
		"@storybook/addon-docs": "^9.1.5",
		"@storybook/addon-svelte-csf": "^5.0.8",
		"@storybook/addon-themes": "^9.1.5",
		"@storybook/addon-vitest": "^9.1.5",
		"@storybook/sveltekit": "^9.1.5",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/package": "^2.3.7",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@types/node": "^20",
		"@vitest/browser": "3.2.4",
		"@vitest/coverage-v8": "^3.2.4",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-storybook": "^9.1.5",
		"eslint-plugin-svelte": "^3.0.0",
		"globals": "^16.0.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"storybook": "^9.1.5",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.2.6",
		"vitest": "3.2.4",
		"vitest-browser-svelte": "^1.1.0"
	},
	"dependencies": {
		"dayjs": "^1.11.13",
		"dompurify": "^3.2.6",
		"sass": "^1.89.2"
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	}
}
